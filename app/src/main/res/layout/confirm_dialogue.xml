<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:textColor="@color/black"
    android:weightSum="1">
    <!-- horizontal border with title  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Medication Details "
            android:textColor="@color/blue"
            android:textSize="16dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/confirmImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left|center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:padding="3dp"
            android:src="@drawable/med_kit" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/ic_local_hospital_black_24dp" />

                <TextView
                    android:id="@+id/medNameTV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Med Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/confirm_text_size_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:src="@drawable/ic_local_pharmacy_black_24dp" />

                <TextView
                    android:id="@+id/doseNameTV"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Dose Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/confirm_text_size_1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="10dp">
        <!--filler-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/startDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />

        <TextView
            android:id="@+id/startDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" to "
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />

        <TextView
            android:id="@+id/endDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />
        <!--filler-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

    </LinearLayout>
    <!-- horizontal border with title  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Alert Times "
            android:textColor="@color/blue"
            android:textSize="16dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/alert1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert1"
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/alert2TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert2"
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/alert3TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert3"
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/alert4TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert4"
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/alert5TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert5"
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:id="@+id/alert6TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alert6"
            android:textColor="@color/black"
            android:textSize="@dimen/confirm_text_size_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />
    </LinearLayout>

    <TextView
        android:id="@+id/alertStateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alerts are ON"
        android:textAppearance="?android:attr/textAppearanceLarge" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/blue" />
    </LinearLayout>

</LinearLayout>